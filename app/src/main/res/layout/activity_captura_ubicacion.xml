<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".Deposito.CapturaUbicacion">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:text="Ingrese la Ubicación"
            android:gravity="center"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="111dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_codigoSoporte"
                android:layout_width="275dp"
                android:layout_height="match_parent"
                android:hint="Leer Código..."
                android:imeActionId="12"
                android:maxLength="20"
                android:maxLines="1"
                android:singleLine="true" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="133dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ingrese el Código de Manipulación"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_codigoManipulacion"
                android:layout_width="275dp"
                android:layout_height="match_parent"
                android:hint="Leer Código..."
                android:imeActionId="12"
                android:maxLength="20"
                android:maxLines="1"
                android:singleLine="true" />
        </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_aceptar"
            style="?android:textAppearanceSmall"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:onClick="aceptarlo"
            android:text="Aceptar"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="1dp">

        <Button
            android:id="@+id/btn_scan"
            style="?android:textAppearanceSmall"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:onClick="scanner"
            android:text="SCANNER"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>




</LinearLayout>