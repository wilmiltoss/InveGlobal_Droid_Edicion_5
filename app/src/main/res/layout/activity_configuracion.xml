<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".iTrack.ConfiguracionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tx_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario:      "
            android:textColor="@color/colorPrimaryNegro"
            android:textSize="15dp" />



        <TextView
            android:id="@+id/tv_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="usuario"
            android:textColor="@color/colorPrimaryNegro"
            android:textSize="15dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/txt_tipoNegocio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:text="Tipo de Negocio : "
            android:textColor="@color/colorPrimaryNegro"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/sp_tipo_negocio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@drawable/stylo_borde"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/txt_cadena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:text="Cadena : "
            android:textColor="@color/colorPrimaryNegro"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/sp_cadena"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@drawable/stylo_borde"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/txt_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:text="Local : "
            android:textColor="@color/colorPrimaryNegro"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/sp_local"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@drawable/stylo_borde"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/txt_tipo_soporte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:text="Tipo de Soporte : "
            android:textColor="@color/colorPrimaryNegro"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/sp_tipo_soporte"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@drawable/stylo_borde"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_iniciar_carga"
            android:layout_width="312dp"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:background="@color/colorPrimary"
            android:text="INICIAR CARGA"
            android:layout_gravity="center"
            android:onClick="onClickIniciarCarga"
            android:gravity="center"
            android:textColor="@color/cardview_light_background" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="local"
            android:textColor="@color/colorPrimaryNegro"
            android:textSize="10dp" />
        <TextView
            android:id="@+id/textView_desc_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="descripcion"
            android:textColor="@color/colorPrimaryNegro"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/textView_ubicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ubicacion"
            android:textColor="@color/colorPrimaryNegro"
            android:textSize="10dp" />
        <TextView
            android:id="@+id/textView_desc_ubicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="descripcion"
            android:textColor="@color/colorPrimaryNegro"
            android:textSize="10dp" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="101dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_tipo_negocio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tipo negocio"
                android:textColor="@color/colorPrimaryNegro"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/textView_desc_tipo_negocio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="descripcion"
                android:textColor="@color/colorPrimaryNegro"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/textView_cadena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cadena"
                android:textColor="@color/colorPrimaryNegro"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/textView_desc_cadena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="descripcion"
                android:textColor="@color/colorPrimaryNegro"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/textView_tipo_soporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tipo soporte"
                android:textColor="@color/colorPrimaryNegro"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/textView_desc_tipo_soporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="descripcion"
                android:textColor="@color/colorPrimaryNegro"
                android:textSize="10dp" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>